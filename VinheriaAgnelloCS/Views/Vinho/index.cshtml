@model IEnumerable<VinhoModel>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Lista de Vinhos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container py-5">
    <h1 class="mb-4 text-center">Lista de Vinhos</h1>

    @if (!string.IsNullOrEmpty((String)TempData["mensagemSucesso"]))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["mensagemSucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="mb-3 text-end">
        <a asp-action="Create" asp-controller="Vinho" class="btn btn-primary">Novo Vinho</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Imagem</th>
                    <th>Marca</th>
                    <th>Categoria</th>
                    <th>Preço</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vinho in Model)
                {
                    <tr>
                        <td>@vinho.id</td>
                        <td>@vinho.nome</td>
                        <td>@vinho.descricao</td>
                        <td><img src="@vinho.imagem" alt="Imagem do vinho" width="80" class="img-thumbnail"/></td>
                        <td>@vinho.marca</td>
                        <td>@vinho.categoria</td>
                        <td>@vinho.preco.ToString("C")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="Vinho" asp-action="Edit" asp-route-id="@vinho.id" class="btn btn-sm btn-warning">Editar</a>
                                <a asp-controller="Vinho" asp-action="Detail" asp-route-id="@vinho.id" class="btn btn-sm btn-info text-white">Consultar</a>
                                <a asp-controller="Vinho" asp-action="Delete" asp-route-id="@vinho.id" class="btn btn-sm btn-danger">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
