@model VinheriaAgnelloCS.Models.VinhoModel

@{
    ViewData["Title"] = "Editar Vinho";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Editar Vinho</h2>

            <form asp-action="Edit" asp-controller="Vinho" class="bg-white p-4 shadow rounded">
                <input type="hidden" asp-for="id" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="nome" class="form-label"></label>
                    <input asp-for="nome" class="form-control" />
                    <span asp-validation-for="nome" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="descricao" class="form-label"></label>
                    <input asp-for="descricao" class="form-control" />
                    <span asp-validation-for="descricao" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="imagem" class="form-label"></label>
                    <input asp-for="imagem" class="form-control" />
                    <span asp-validation-for="imagem" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="marca" class="form-label"></label>
                    <input asp-for="marca" class="form-control" />
                    <span asp-validation-for="marca" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="categoria" class="form-label"></label>
                    <input asp-for="categoria" class="form-control" />
                    <span asp-validation-for="categoria" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="preco" class="form-label"></label>
                    <input asp-for="preco" class="form-control" />
                    <span asp-validation-for="preco" class="text-danger small"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">Salvar</button>
                    <a asp-action="Index" asp-controller="Vinho" class="btn btn-outline-secondary">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
