@model VinheriaAgnelloCS.Models.VinhoModel

@{
    ViewData["Title"] = "Detalhes do Vinho";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center mb-4">Detalhes do Vinho</h2>
            
            <div class="card shadow p-4">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Nome</dt>
                    <dd class="col-sm-9">@Model.nome</dd>

                    <dt class="col-sm-3">Descrição</dt>
                    <dd class="col-sm-9">@Model.descricao</dd>

                    <dt class="col-sm-3">Marca</dt>
                    <dd class="col-sm-9">@Model.marca</dd>

                    <dt class="col-sm-3">Categoria</dt>
                    <dd class="col-sm-9">@Model.categoria</dd>

                    <dt class="col-sm-3">Preço</dt>
                    <dd class="col-sm-9">@Model.preco.ToString("C")</dd>

                    <dt class="col-sm-3">Imagem</dt>
                    <dd class="col-sm-9">@Model.imagem</dd>
                </dl>
            </div>

            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>